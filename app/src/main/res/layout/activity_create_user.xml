<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listday"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/white_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line1"
        android:padding="4dp"
        android:layout_marginBottom="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rec_find"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/user"
                android:id="@+id/user"
                android:layout_gravity="center"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.4"
                android:layout_height="wrap_content"
                android:text="Nombre "
                android:textColor="@color/word_clear"
                android:paddingLeft="8dp"
                android:textSize="@dimen/general_text"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/line_vertical"
                />


            <EditText
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:inputType="textCapSentences"
                android:layout_height="35dp"
                android:fontFamily="@font/opensanssight"
                android:background="@drawable/rec_find"
                android:paddingLeft="8dp"
                android:textColorHint="@color/word_clear"
                android:textColor="@color/FishyLetraDark"
                android:textSize="@dimen/general_text"
                android:id="@+id/user_name"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rec_find"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="6dp"
                android:src="@mipmap/phonelei"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.4"
                android:layout_height="wrap_content"
                android:text="Teléfono "
                android:textColor="@color/word_clear"
                android:paddingLeft="8dp"
                android:textSize="@dimen/general_text"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/line_vertical"
                />


            <EditText
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:inputType="number"
                android:layout_height="35dp"
                android:background="@drawable/rec_find"
                android:paddingLeft="8dp"
                android:fontFamily="@font/opensanssight"
                android:textColorHint="@color/word_clear"
                android:textColor="@color/FishyLetraDark"
                android:textSize="@dimen/general_text"
                android:id="@+id/user_phone"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rec_find"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/facebook"
                android:id="@+id/face"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.4"
                android:layout_height="wrap_content"

                android:text="Facebook "
                android:textColor="@color/word_clear"
                android:paddingLeft="8dp"
                android:textSize="@dimen/general_text"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/line_vertical"
                />

            <EditText
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:inputType="textCapSentences"

                android:layout_height="35dp"
                android:background="@drawable/rec_find"
                android:paddingLeft="8dp"
                android:fontFamily="@font/opensanssight"
                android:textColorHint="@color/word_clear"
                android:textColor="@color/FishyLetraDark"
                android:textSize="@dimen/general_text"
                android:id="@+id/facebook"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rec_find"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/inst2"
                android:id="@+id/inst"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.4"
                android:layout_height="wrap_content"
                android:text="Instagram "
                android:textColor="@color/word_clear"
                android:paddingLeft="8dp"
                android:textSize="@dimen/general_text"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/line_vertical"
                />

            <EditText
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:background="@drawable/rec_find"
                android:paddingLeft="8dp"
                android:fontFamily="@font/opensanssight"
                android:textColorHint="@color/word_clear"
                android:textColor="@color/FishyLetraDark"
                android:textSize="@dimen/general_text"
                android:id="@+id/instagram"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/rec_find"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:id="@+id/home"
                android:layout_marginLeft="6dp"
                android:src="@drawable/home2"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1.4"
                android:layout_height="wrap_content"
                android:text="Dirección "
                android:textColor="@color/word_clear"
                android:paddingLeft="8dp"
                android:textSize="@dimen/general_text"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@drawable/line_vertical"
                />

            <EditText
                style="@style/Widget.Design.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:background="@drawable/rec_find"
                android:inputType="textCapSentences"
                android:paddingLeft="8dp"
                android:fontFamily="@font/opensanssight"
                android:textColorHint="@color/word_clear"
                android:textColor="@color/FishyLetraDark"
                android:textSize="@dimen/general_text"
                android:id="@+id/user_address"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="35dp"
                android:background="@drawable/rec_find"
               android:paddingLeft="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:id="@+id/ubic"

                    android:src="@drawable/pin5"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1.4"
                    android:layout_height="wrap_content"
                    android:text="Zona "
                    android:textColor="@color/word_clear"
                    android:paddingLeft="8dp"
                    android:textSize="@dimen/general_text"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@drawable/line_vertical"
                    />


                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/nei"
                    android:fontFamily="@font/opensanssight"
                    style="@style/CodeFontInput"
                    />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"

            android:layout_marginTop="12dp"
            android:paddingRight="4dp"
            android:gravity="end"
            android:layout_height="80dp">

            <Button
                android:layout_width="140dp"
                android:background="@drawable/rounded_button"

                android:id="@+id/add_neigh"
                android:layout_height="35dp"
                android:fontFamily="@font/opensansregular"
                android:layout_gravity="end"
                android:text="  Crear zona  "
                android:textColor="@color/word"
                android:layout_marginTop="12dp"

                />


        </LinearLayout>

    </LinearLayout>




</RelativeLayout>