<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_mistake"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rec_dialog"
    android:backgroundTint="@color/background_dialog"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_margin_bottom"
        android:layout_marginTop="@dimen/dialog_margin_top"
        android:layout_marginLeft="@dimen/dialog_margin_left"
        android:layout_marginRight="@dimen/dialog_margin_right"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Información"
            android:textSize="19sp"
            android:textColor="@color/title_dialog_info"
            android:gravity="center"
            android:textStyle="bold"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:textSize="@dimen/general_text"
                android:textColor="@color/word"
                android:fontFamily="@font/opensansregular"
                android:text="Nombre "/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="4dp"
                android:textColor="@color/FishyLetraDark"
                android:textSize="@dimen/general_text"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:textSize="@dimen/general_text"
                android:fontFamily="@font/opensansregular"
                android:textColor="@color/word"
                android:text="Dirección "/>

            <TextView
                android:id="@+id/user_address"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/FishyLetraDark"
                android:textSize="@dimen/general_text"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:textSize="@dimen/general_text"
                android:fontFamily="@font/opensansregular"
                android:textColor="@color/word"
                android:text="Zona "/>

            <TextView
                android:id="@+id/user_neighboor"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/FishyLetraDark"
                android:textSize="@dimen/general_text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansregular"
                android:text="Telefono "
                android:textColor="@color/word"
                android:textSize="@dimen/general_text" />


            <TextView
                android:id="@+id/user_phone"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text=""
                android:textColor="@color/FishyLetraDark"
                android:textSize="@dimen/general_text"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansregular"
                android:text="Instagram "
                android:textColor="@color/word"
                android:textSize="@dimen/general_text" />


            <TextView
                android:id="@+id/user_inst"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text=""
                android:textColor="@color/FishyLetraDark"
                android:textSize="@dimen/general_text"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensansregular"
                android:text="Facebook "
                android:textColor="@color/word"
                android:textSize="@dimen/general_text" />


            <TextView
                android:id="@+id/user_face"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text=""
                android:textColor="@color/FishyLetraDark"
                android:textSize="@dimen/general_text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/edituser"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@mipmap/edith"
                android:padding="8dp"
                android:textColor="#6e6e6e"
                android:textSize="18dp"
                android:textStyle="italic"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:id="@+id/phone"
                android:padding="8dp"
                android:src="@mipmap/phone"
                android:textColor="#6e6e6e"
                android:textSize="18dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:id="@+id/historyuser"
                android:padding="8dp"
                android:textColor="#6e6e6e"
                android:src="@mipmap/list2"

                />

            <ImageView
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/delete"
                android:padding="8dp"
                android:id="@+id/deleteuser"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#414141"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

