<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
        <shape>
            <solid
                android:color="@color/colorPrimaryDarkTab" />
            <stroke
                android:width="1px"
                android:color="@color/colorPrimaryDarkTab" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/colorPrimaryDarkTab" />
            <stroke
                android:width="1px"
                android:color="@color/colorPrimaryDarkTab" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>